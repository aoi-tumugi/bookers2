      <%= notice %>
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100'%>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
          </tr>
          <th>introduction</th>
          <th><%= current_user.caption %></th>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(user) do %>
        <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
        <% end %>
      </div>

        <h2 class="mt-3">New book</h2>
           <%= form_with model:book, local:true do |f| %>
           <form actions="/books" accept-charset="UTF-8" method="post">
        <div class="form-group">
          <label for="book_title">
            Title
            </label>
        </div>
        <%= f.text_field :title %>

        <div class="form-group">
          <label for="book_opinion">Opinion</label>
        </div>
        <%= f.text_area :body %>

        <div class="form-group">
        </div>
         <%= f.submit 'Create Book' %>

         <% end %>
          </form>